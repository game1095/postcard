<%= form_for @card do |f| %>
  <p>
    <%= f.label :full_name %>
    <%= f.text_field :full_name , required: true %>
  </p>
  <p>
  	<%= f.label :address %>
  	<%= f.text_area :address ,rows: 20 , cols: 30 , required: true %>
  </p>
  <p>
    <%= f.label :phonenumber%>
    <%= f.text_field :phone , required: true %>
  </p>
  <p>
  	<%= f.label :quantity %>
  	<%= f.number_field :quantity , required: true %>
  </p>
  <p>
    <%= f.label :stocks_id %>
    <%= f.collection_select :stocks_id, Stock.all.order(id: :asc), :id, :name , {prompt: "select stock"} , required: true %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
